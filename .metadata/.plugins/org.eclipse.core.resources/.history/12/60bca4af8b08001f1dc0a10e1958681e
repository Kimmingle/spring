<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- The definition of the Root Spring Container shared by all Servlets and Filters -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring/root-context.xml</param-value>
	</context-param>
	
	<!-- Creates the Spring Container shared by all Servlets and Filters -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- 디스패처 서블릿 정의 -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<!-- 사용할 클래스(서블릿에서 제공되며 나중에 브라우저들이 서버에 요청을 했을때 모든 요청을 받을 것임 ) -->
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name><!--컨텍스트 관련 설정 위치-->
			<param-value><!--밑의 파일들을 읽어들여서 서블릿 파일이 동작하게 해줄것임-->
				/WEB-INF/spring/appServlet/servlet-context.xml
			</param-value>
		</init-param>
		<!--서비스가 시작되자마자 서블릿 컨테이너가 로딩할 수 있도록 적어줌(시작되자마자 디스패처 서블릿이 설정파일 읽어서 준비될것임) -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<!-- 디폴트 서블릿 매핑 -->
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name><!--이 서블릿 이름으로 매핑 -->
		<url-pattern>/</url-pattern><!-- (/)매핑은 디폴트 서블릿으로 동작함(모든 요청을 처리하는 역할을 appServlet가 한다)-->
	</servlet-mapping>

    <!-- 한글깨짐 방지 --> 
    <filter> 
        <filter-name>encodingFilter</filter-name> <!-- 필터 클래스 이름 -->
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param> 
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
